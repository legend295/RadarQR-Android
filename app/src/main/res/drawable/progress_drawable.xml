<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:useLevel="true"
            android:thicknessRatio="30.0" >
            <gradient
                android:centerColor="#00000012"
                android:endColor="#00000012"
                android:startColor="#00000012"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90" >
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="30.0" >
                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="@color/mobile_back"
                    android:endColor="@color/mobile_back"
                    android:startColor="@color/mobile_back"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>