<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewHandler"
            type="com.radarqr.dating.android.utility.handler.ViewClickHandler" />

        <variable
            name="isUrlEmpty"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <com.radarqr.dating.android.utility.LockableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/includeUploadVenuePhoto"
                layout="@layout/layout_upload_venue_photo"
                app:isUrlEmpty="@{isUrlEmpty}"
                app:viewHandler="@{viewHandler}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.radarqr.dating.android.utility.LockableScrollView>
</layout>
