<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickHandler"
            type="com.radarqr.dating.android.utility.handler.ViewClickHandler" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_back"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:onClick="@{clickHandler::onClick}"
                android:padding="@dimen/_10sdp"
                android:scaleType="center"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRoamingTimer"
                style="@style/Widget.Radar.Text.Header.Bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/roaming_timer"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCheckIn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:onClick="@{clickHandler::onClick}"
                android:src="@drawable/ic_venue_checkin"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tvRoamingTimer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintStart_toEndOf="@id/tvRoamingTimer"
                app:layout_constraintTop_toTopOf="@id/tvRoamingTimer"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVenue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/tvRoamingTimer" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha=".6"
                android:background="@drawable/ic_blur_background"
                android:backgroundTint="@color/black_color"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/ivVenue"
                app:layout_constraintEnd_toEndOf="@id/ivVenue"
                app:layout_constraintStart_toStartOf="@id/ivVenue"
                app:layout_constraintTop_toTopOf="@id/ivVenue" />

            <LinearLayout
                android:id="@+id/llVenueDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{clickHandler::onClick}"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/ivVenue"
                app:layout_constraintEnd_toEndOf="@id/ivVenue"
                app:layout_constraintStart_toStartOf="@id/ivVenue"
                app:layout_constraintTop_toTopOf="@id/ivVenue">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVenueName"
                    style="@style/Widget.Radar.Text.Large.Bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp"
                    tools:text="Katani Restaurant" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVenueAddress"
                    style="@style/Widget.Radar.Text.Content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="40, Mohali Stadium Rd, Phase 3B-2, Sector 60, Sahibzada Ajit Singh Nagar, Punjab 160059, India" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                style="@style/Widget.Radar.Text"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_25sdp"
                android:paddingEnd="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimerBelowGivenMin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimerBelowGivenMin"
                style="@style/Widget.Radar.Text.Header.Bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/iosRed"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivVenue"
                tools:text="01:59:19"
                tools:visibility="visible" />

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hapticFeedbackEnabled="true"
                android:theme="@style/DefaultNumberPickerTheme"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/viewBackground"
                app:layout_constraintTop_toBottomOf="@id/tvMessage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimer"
                style="@style/Widget.Radar.Text.Header.Bold"
                android:background="@drawable/ic_roaming_timer_bg"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/viewBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMessage"
                tools:text="01:59:19"
                tools:visibility="visible" />

            <View
                android:id="@+id/viewBackground"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/rect_white"
                app:layout_constraintBottom_toBottomOf="@id/tvSinglesAreReady"
                app:layout_constraintEnd_toEndOf="@id/ivInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSinglesAreReady"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSinglesAreReady"
                style="@style/Widget.Radar.Text.Content"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="You will be able to extend this time later. Go have fun &amp; be safe!"
                android:textColor="@color/text_light"
                app:layout_constraintBottom_toTopOf="@id/btnSetTimer"
                app:layout_constraintEnd_toStartOf="@id/ivInfo"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:onClick="@{clickHandler::onClick}"
                android:src="@drawable/ic_info"
                app:layout_constraintBottom_toBottomOf="@id/tvSinglesAreReady"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSinglesAreReady" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLocationGet"
                style="@style/Widget.Radar.Text.Content.Bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:text="@string/fetching_location"
                app:layout_constraintStart_toStartOf="@id/btnSetTimer"
                app:layout_constraintBottom_toTopOf="@id/btnSetTimer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_round_with_radius_6"
                android:backgroundTint="@color/teal_200"
                android:gravity="center"
                android:onClick="@{clickHandler::onClick}"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintBottom_toTopOf="@id/tvNoTimer"
                tools:layout_editor_absoluteX="-16dp"
                tools:text="@string/set_timer_amp_show_me_singles"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStopTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_round_with_radius_6"
                android:backgroundTint="@color/iosRed"
                android:gravity="center"
                android:onClick="@{clickHandler::onClick}"
                android:text="@string/stop_timer_amp_don_t_show_singles"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintBottom_toTopOf="@id/tvNoTimer"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoTimer"
                style="@style/Widget.Radar.Text.Bold"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="@{clickHandler::onClick}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/set_timer_amp_show_me_singles" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvExploreTheVenue"
                style="@style/Widget.Radar.Text.Bold"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="@{clickHandler::onClick}"
                android:text="@string/let_s_explore_the_venue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/emptyView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivVenue" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBarResponse"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="2dp"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btnStopTimer"
                app:layout_constraintEnd_toEndOf="@id/btnStopTimer"
                app:layout_constraintTop_toTopOf="@id/btnStopTimer" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</layout>
