<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewHandler"
            type="com.radarqr.dating.android.utility.handler.ViewClickHandler" />

        <variable
            name="bottomNavType"
            type="BottomNavType" />

        <import type="com.radarqr.dating.android.ui.home.main.HomeActivity.BottomNavType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/tvMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHotspot" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:onClick="@{viewHandler::onClick}"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="@id/tvHotspot"
            app:layout_constraintStart_toStartOf="@id/view"
            tools:visibility="visible" />

        <View
            android:id="@+id/viewHotspot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_round_stroke"
            app:layout_constraintBottom_toBottomOf="@id/tvHotspot"
            app:layout_constraintEnd_toEndOf="@id/ivFire"
            app:layout_constraintStart_toStartOf="@id/tvHotspot"
            app:layout_constraintTop_toTopOf="@id/tvHotspot" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHotspot"
            style="@style/Widget.Radar.Text.Content.Bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/hot_spots"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:src="@drawable/ic_fire_hot_spot"
            app:layout_constraintBottom_toBottomOf="@id/tvHotspot"
            app:layout_constraintStart_toEndOf="@id/tvHotspot"
            app:layout_constraintTop_toTopOf="@id/tvHotspot" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivFire"
            app:layout_constraintStart_toEndOf="@id/ivFire"
            app:layout_constraintTop_toTopOf="@id/ivFire" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessage"
            style="@style/Widget.Radar.Text"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Improve your odds of meeting IRL by going to certified Hot Spots!"
            android:textColor="@color/text_light"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/ivSetting"
            app:layout_constraintStart_toStartOf="@id/tvHotspot"
            app:layout_constraintTop_toBottomOf="@id/ivBack" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_hotspot_settings"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tvMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRoamingTimer"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:onClick="@{viewHandler::onClick}"
            android:src="@drawable/ic_roaming_timer_red"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivFire"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toEndOf="@id/ivFire"
            app:layout_constraintTop_toTopOf="@id/ivFire"
            tools:visibility="visible" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/white"
            android:onClick="@{viewHandler::onClick}"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_big"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/ivFire"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toEndOf="@id/ivFire"
            app:layout_constraintTop_toTopOf="@id/ivFire"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGps"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_my_location"
            android:onClick="@{viewHandler::onClick}"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_my_location"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--<View
            android:id="@+id/viewBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/bg_round_stroke"
            app:layout_constraintBottom_toBottomOf="@id/tvRefresh"
            app:layout_constraintEnd_toEndOf="@id/viewHotspot"
            app:layout_constraintStart_toStartOf="@id/viewHotspot"
            app:layout_constraintTop_toTopOf="@id/tvRefresh" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:onClick="@{viewHandler::onClick}"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/refresh"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/viewBg"
            app:layout_constraintStart_toEndOf="@id/ivRefresh" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRefresh"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_round_refresh_24"
            app:layout_constraintBottom_toBottomOf="@id/tvRefresh"
            app:layout_constraintEnd_toStartOf="@id/tvRefresh"
            app:layout_constraintStart_toStartOf="@id/viewBg"
            app:layout_constraintTop_toTopOf="@id/tvRefresh" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUpdating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_round_stroke"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="@string/updating"
            android:visibility="gone"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav"
            app:layout_constraintEnd_toEndOf="@id/viewHotspot"
            app:layout_constraintStart_toStartOf="@id/viewHotspot"
            tools:visibility="visible" />

        <include
            android:id="@+id/bottom_nav"
            layout="@layout/layout_custom_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:bottomNavType="@{bottomNavType}"
            app:clickHandler="@{viewHandler}"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
