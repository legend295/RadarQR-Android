<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.radarqr.dating.android.ui.home.settings.EditProfile.EditProfileModel" />

        <import type="com.radarqr.dating.android.utility.FontsTypes" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/Widget.Radar.Text"
            android:layout_width="0dp"
            android:background="@{data.selected? @drawable/green_fill_rect: @drawable/rect_grey}"
            android:padding="@dimen/_10sdp"
            android:text="@{data.title}"
            android:textColor="@{data.selected? @color/white: @color/iconsColorDark}"
            app:fontType="@{data.selected? FontsTypes.POPPINS_BOLD: FontsTypes.POPPINS_REGULAR}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
