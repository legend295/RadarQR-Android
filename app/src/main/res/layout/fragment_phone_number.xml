        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_phone_blue_colored"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enter_phone_number"
            style="@style/Widget.Radar.Text.Title.Bold"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/enter_your_phone_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_phone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_body"
            style="@style/Widget.Radar.Text"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="@string/please_enter_your_mobile_number_you_will_receive_a_code_to_verify_mobile_number"
            app:layout_constraintEnd_toEndOf="@id/tv_enter_phone_number"
            app:layout_constraintStart_toStartOf="@id/tv_enter_phone_number"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_phone_number" />

