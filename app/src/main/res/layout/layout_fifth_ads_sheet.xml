<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fifth_ads_bg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fifth_ads_blur"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFirst"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_fifth_ads_first"
            app:layout_constraintEnd_toStartOf="@id/ivSecond"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline.2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSecond"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_85sdp"
            android:src="@drawable/ic_fifth_ads_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFirst"
            app:layout_constraintTop_toBottomOf="@id/guideline.2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivThird"
            android:layout_width="@dimen/_93sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_fifth_ads_third"
            app:layout_constraintEnd_toStartOf="@id/ivForth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline.4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivForth"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_110sdp"
            android:src="@drawable/ic_fifth_ads_forth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivThird"
            app:layout_constraintTop_toBottomOf="@id/guideline.4" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHotspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/hot_spots"
            android:textSize="@dimen/_20sdp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_fire_hot_spot"
            app:layout_constraintBottom_toBottomOf="@id/tvHotspot"
            app:layout_constraintEnd_toStartOf="@id/tvHotspot"
            app:layout_constraintTop_toTopOf="@id/tvHotspot" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="@string/discover_where_amp_who_the_singles_are"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toTopOf="@id/tvLifeShort" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLifeShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/discover_the_trendiest_spots_in_town_ncheck_in_and_immerse_yourself_in_the_nultimate_singles_experience"
            app:layout_constraintBottom_toTopOf="@id/tvUpgrade" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUpgrade"
            style="@style/Widget.Radar.Text.Content.SemiBold"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/green_fill_rect"
            android:backgroundTint="@color/black_color"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/upgrade_to_radarqr_plus"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_round"
            android:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivClose"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
