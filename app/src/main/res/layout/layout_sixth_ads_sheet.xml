<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sixth_ads_bg" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_first_ads_blur"
            app:layout_constraintBottom_toBottomOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHotspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/hot_spots"
            android:textSize="@dimen/_20sdp"
            android:textAllCaps="true"
            app:fontFamily="@font/poppins_extrabold"
            android:textColor="@color/mobile_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvTitle"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_fire_hot_spot"
            app:layout_constraintBottom_toBottomOf="@id/tvHotspot"
            app:layout_constraintEnd_toStartOf="@id/tvHotspot"
            app:layout_constraintTop_toTopOf="@id/tvHotspot" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="Where Singles Go To Mingle in Real Time!"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toTopOf="@id/tvLifeShort" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLifeShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Ask Your Favorite Venues to Join!\nOwn a Venue? Register Today!"
            app:layout_constraintBottom_toTopOf="@id/tvLifeSmall" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLifeSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_8sdp"
            android:text="Example Venue Types: Bar, Night/Social Club, Coffee\nShop, Gym, Restaurant, and more!"
            app:layout_constraintBottom_toTopOf="@id/tvUpgrade" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUpgrade"
            style="@style/Widget.Radar.Text.Content.SemiBold"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/green_fill_rect"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/upgrade_to_radarqr_plus_white"
            android:textColor="@color/black_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivClose"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
