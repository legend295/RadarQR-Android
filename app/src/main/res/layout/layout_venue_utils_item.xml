<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.radarqr.dating.android.hotspots.model.VenueTypeAndAmbianceResponse" />

        <import type="com.radarqr.dating.android.utility.FontsTypes" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@{data.selected? @drawable/bg_teal_hobbies_and_interest : @drawable/bg_round_gray_white_stroke}"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_6sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_hobbies"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/Widget.Radar.Text.MediumBody"
                android:layout_gravity="center"
                android:text="@{data.name}"
                android:textColor="@{data.selected? @color/white : @color/iconsColorDark}" />
        </LinearLayout>
    </LinearLayout>
</layout>
