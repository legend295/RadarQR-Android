<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvValue"
            style="@style/Widget.Radar.Text.Content"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:drawableStart="@{icon}"
            android:drawablePadding="@dimen/_10sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/_13sdp"
            app:layout_constraintEnd_toStartOf="@id/tvRequired"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tips and tricks" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRequired"
            style="@style/Widget.Radar.Text"
            android:layout_height="0dp"
            android:layout_width="@dimen/_60sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="@string/required"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/tvValue"
            app:layout_constraintEnd_toStartOf="@id/ivTick"
            app:layout_constraintTop_toTopOf="@id/tvValue" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTick"
            android:src="@drawable/ic_tick"
            android:visibility="gone"
            android:layout_width="@dimen/_15sdp"
            tools:visibility="visible"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvValue"
            app:layout_constraintBottom_toBottomOf="@id/tvValue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
